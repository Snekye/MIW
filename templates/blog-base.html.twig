{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/blog.css')}}">
<link rel="stylesheet" href="{{asset('css/component/tags.css')}}">
{% endblock %}

{% block body %}
<section class="-flex-sb">
    <div class="left">
        <div>
            <h2 class="-cl-orange">Tous les th√®mes :</h2>
            <ul class="-cl-brown -fs-18">
            {% for t in themes %}
                <li><a class="-cl-brown" href="{{path('blog-theme', {"theme": t.lib }) }}">{{ t.lib }}</a></li>
            {% endfor %}
            </ul>
        </div>

        <div>
            <h2 class="-cl-orange">Tous les tags :</h2>
            <div class="-cl-brown -fs-18">
            <span>-</span>
            {% for t in tags %}
                <span class="-cl-brown -tdu"><a class="-cl-brown" href="{{path('blog-tag', {"tag": t.lib }) }}">{{ t.lib }}</a></span>
                 - 
            {% endfor %}
            </div>
        </div>

        <div>
            <h2 class="-cl-orange">Par date :</h2>
            <ul class="-cl-brown -fs-18">
            {% for d in dates %}
                <li class="-cl-brown"><a class="-cl-brown" href="{{path('blog-date', {"date": d | date("Y-m")}) }}">{{ d | date("F Y") }}</a></li> 
            {% endfor %}
            </ul>
        </div>
    </div>

    {% block right %}
    {% endblock %}
</section>
{% endblock %}